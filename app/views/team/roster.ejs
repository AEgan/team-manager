<html>

<head>
<% include ../head_scripts %>
<script src="/js/roster_update.js"></script>
</head>

<body>
<% include ../head %>
<!--************************CONTENT**************************-->


<h1><%=team.name%> Team Roster</h1>

   		<div cid="roster" class="form-inline">
	    	<table class="table" id="roster-table">
	    		<thead>
	    			<tr>
	    				<th>Name</th>
	    				<th>User</th>
	    				<th></th>
	    			</tr>
	    		</thead>

	    		<% players.forEach(function(p){ %>

	    			<tr>
	    				<td>
					        <a href="/players/<%=p._id%>"><%= p.first_name %> <%= p.last_name %></a>
					    </td>

					    <td>
					        <a href="/players/<%=p._id%>"><%= p.first_name %> <%= p.last_name %></a>
					    </td>

					    <td>
					    	<form method='post' action="/teams/<%= team._id%>/players/<%= p._id%>/remove" >
								<input type="Submit" value="Remove Player"/>
							</form>
					    </td>
					</tr>

				<% }); %>
				</table>
				<div id="roster-list">
			</div>
		</div>
		<br><br>

        <div class="form-group text-center">
              <button type="button" id="add_row" class="btn btn-default">Add More Players</button>
              <hr>
        </div>

        <div class="form-group text-center">
              <button disabled="disabled" type="button" id="submit" class="btn btn-default">Submit Roster</button>
        </div>












<!--***********************END OF CONTENT************************-->
<% include ../footer %>
</body>

</html>