<html>

<head>
<% include ../head_scripts %>
</head>

<body>
<% include ../head %>
<!--************************CONTENT**************************-->

<h1>Edit <%= event.type %> for team <%= team.name %></h1>

<form method="POST", action=<%= "/events/"+event._id+"/edit" %> >

	Team Name: <select name="team_id" class="formlist">
	<option value= <%= team._id %>> <%= team.name %> </option>
	<% for (var i=0; i < teams.length; i++) { %>
		<option value = <%= teams[i]._id %>><%= teams[i].name %></option>
		<%= teams[i]._id + ' and ' + teams[i].name %>
	<% } %>
	</select>
	<br />
	<b>Date</b> <br />
	<% if(month) { %>
		Month: <select name="month" class="formlist">
		<option value=<%= event.date.getMonth() + 1 %>><%= month%></option>
		<option value = "1">January</option>
		<option value = "2">February</option>
		<option value = "3">March</option>
		<option value = "4">April</option>
		<option value = "5">May</option>
		<option value = "6">June</option>
		<option value = "7">July</option>
		<option value = "8">August</option>
		<option value = "9">September</option>
		<option value = "10">October</option>
		<option value = "11">November</option>
		<option value = "12">December</option> 
		</select>
		Day:<input type="number" max="31" min="1" name="day", value="<%= event.date.getDate() %>" />
		Year:<input type="number" max="<%= new Date().getFullYear()+3 %>" min="1950" name="year" value="<%= event.date.getFullYear() %>"> <br />
	<% } %>
	Time: <input type="number" max="23" min="0" name="hour" value="<%=hour%>"/>:<input type="number" max="59" min="0" name="minute" value="<%=event.date.getMinutes()%>">
	<select name="time" class="formlist">
	<option value="am">AM</option>
	<option   <%if(time == "PM"){%> selected="selected" <%}%>  value = "pm">PM</option>
	</select>
	<br />		
	Location: <input type='text' name='location'/><br />
	Type: <input type='text' name='type'/><br />

	<input type="submit" value="Update" />
</form>


<!--***********************END OF CONTENT************************-->
<% include ../footer %>
</body>

</html>