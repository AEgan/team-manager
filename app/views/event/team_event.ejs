<html>

<head >

	<link rel="stylesheet" href="/jqueryui/jquery-ui.custom.css"/>

	<% include ../head_scripts %>

	<script src="/jqueryui/jquery-ui-1.10.4.custom.min.js"></script>
</head >


<body>
<% include ../head %>
<!--************************CONTENT**************************-->

<h1><%= team.name %></h1>
<h2>New Event</h2>
	<form method="post" action="/events/new">
	<input type="hidden" name="team_id" value="<%=team._id%>"/>


	<b>Date</b> <br />
	Month: <select name="month" class="formlist">
	<option></option>
	<option value = "0">January</option>
	<option value = "1">February</option>
	<option value = "2">March</option>
	<option value = "3">April</option>
	<option value = "4">May</option>
	<option value = "5">June</option>
	<option value = "6">July</option>
	<option value = "7">August</option>
	<option value = "8">September</option>
	<option value = "9">October</option>
	<option value = "10">November</option>
	<option value = "11">December</option>
	</select>
	Day:<input type="number" max="31" min="1" name="day"/>
	Year:<input type="number" max="<%= new Date().getFullYear()+3 %>" name="year"> <br />

	Time: <input type="number" max="23" min="0" name="hour"/>:<input type="number" max="59" min="0" name="minute"> 
	<select name="time" class="formlist">
	<option value="am">AM</option><option value = "pm">PM</option>
	</select>
	
	Location: <input type='text' name='location'/><br />
	Type: <input type='text' name='type'/><br />

	<input type='submit' value='Create' />
</form>
<br><br>
<form class="form-horizontal" action="/events/new" method="post" role="form">
	<input type="hidden" name="team_id" value="<%=team._id%>" />
    <div class="form-group">
        <label for="type" class="col-sm-2 control-label">Event Type</label>
        <div class="col-sm-10">
          <input type="string" class="form-control" placeholder="event type" name="type" required>
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="date" required>
        </div>
    </div>
    <div class="form-group">
        <label for="time" class="col-sm-2 control-label">Time</label>
        <div class="col-sm-10">
          <input type="time" class="form-control" name="time">
        </div>
    </div>
    <div class="form-group">
        <label for="location" class="col-sm-2 control-label">Location</label>
        <div class="col-sm-10">
          <input type="string" class="form-control" placeholder="123 Main St." name="location">
        </div>
    </div>
    <div class="form-group">
        <label for="details" class="col-sm-2 control-label">Details</label>
        <div class="col-sm-10">
         	<textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-center">
          <button type="submit" class="btn btn-default">Create Event</button>
        </div>
    </div>
</form>


<!--***********************END OF CONTENT************************-->
<% include ../footer %>
</body>

</html>