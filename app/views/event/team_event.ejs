<html>

<head >

	<link rel="stylesheet" href="/jqueryui/jquery-ui.custom.css"/>

	<% include ../head_scripts %>

	<script src="/jqueryui/jquery-ui-1.10.4.custom.min.js"></script>
</head >


<body>
<% include ../head %>
<!--************************CONTENT**************************-->

<h1><%= team.name %></h1>
<h2>New Event</h2>
	<form class="form-horizontal" method="post" action="/events/new" role="form" data-ajax="false">
	<input type="hidden" name="team_id" value="<%=team._id%>"/>
	<div data-role="fieldcontain">
			<label for="type" class="col-sm-2 control-label">Event Type</label>
				<select name="type" class="form-control" placeholder="event type" required>
				  <option></option>
				  <option value="Practice">Practice</option>
				  <option value="Game">Game</option>
				  <option value="Meeting">Meeting</option>
				  <option value="Other Event">Other Event</option>
				</select>
	</div>
	<div data-role="fieldcontain">
			<label for="location" class="col-sm-2 control-label">Location</label>
				<input type="string" class="form-control" placeholder="123 Main St." name="location">
	</div>
	<div data-role="fieldcontain">
		<label for="date">Date</label>
		<input name="date" id="date" type="date" required/>
	</div>
	<div data-role="fieldcontain">
		<label for="time" class="col-sm-2 control-label">Time</label>
		<input type="time" name="time" id="time" required/>
	</div>
	<div data-role="fieldcontain">
			<label for="details" class="col-sm-2 control-label">Details</label>
			<textarea name="description" class="form-control" rows="3"></textarea>
	</div>
	<div data-role="fieldcontain">
				<button type="submit" class="btn btn-default">Create Event</button>
	</div>

</form>


<!--***********************END OF CONTENT************************-->
<% include ../footer %>
</body>

</html>
