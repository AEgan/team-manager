<html>

<head >

	<link rel="stylesheet" href="/jqueryui/jquery-ui.custom.css"/>

	<% include ../head_scripts %>

	<script src="/jqueryui/jquery-ui-1.10.4.custom.min.js"></script>
</head >


<body>
<% include ../head %>
<!--************************CONTENT**************************-->

<h1><%= team.name %></h1>
<h2>New Event</h2>
<form class="form-horizontal" action="/events/new" method="post" role="form">
	<input type="hidden" name="team_id" value="<%=team._id%>" />
    <div class="form-group">
        <label for="type" class="col-sm-2 control-label">Event Type</label>
        <div class="col-sm-10">
          <input type="string" class="form-control" placeholder="event type" name="type" required>
        </div>
    </div>
    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">Date</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" name="date" required>
        </div>
    </div>
    <div class="form-group">
        <label for="time" class="col-sm-2 control-label">Time</label>
        <div class="col-sm-10">
          <input type="time" class="form-control" name="time">
        </div>
    </div>
    <div class="form-group">
        <label for="location" class="col-sm-2 control-label">Location</label>
        <div class="col-sm-10">
          <input type="string" class="form-control" placeholder="123 Main St." name="location">
        </div>
    </div>
    <div class="form-group">
        <label for="details" class="col-sm-2 control-label">Details</label>
        <div class="col-sm-10">
         	<textarea class="form-control" rows="3"></textarea>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10 text-center">
          <button type="submit" class="btn btn-default">Create Event</button>
        </div>
    </div>
</form>


<!--***********************END OF CONTENT************************-->
<% include ../footer %>
</body>

</html>
