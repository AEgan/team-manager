<h1>New Event</h1>



<form method="post" action="/events/new">
	Team Name: <select name="team_id" class="formlist">
	<% for (var i=0; i < teams.length; i++) { %>
		<option value = <% teams[i]._id %>><%= teams[i].name %></option>
		<%= teams[i]._id + ' and ' + teams[i].name %>
	<% } %>
	</select>
	<!-- <input type='text' name='team_id'/> -->
	<br />
	<b>Date</b> <br />
	Month: <select name="month" class="formlist">
	<option></option>
	<option value = "1">January</option>
	<option value = "2">February</option>
	<option value = "3">March</option>
	<option value = "4">April</option>
	<option value = "5">May</option>
	<option value = "6">June</option>
	<option value = "7">July</option>
	<option value = "8">August</option>
	<option value = "9">September</option>
	<option value = "10">October</option>
	<option value = "11">November</option>
	<option value = "12">December</option> 
	</select>
	Day:<input type="number" max="31" min="1" name="day"/>
	Year:<input type="number" max=<%= "" + new Date().getFullYear()%> name="year"> <br />

	Time: <input type="number" max="23" min="0" name="hour"/>:<input type="number" max="59" min="0" name="minute"> <br />
	
	Location: <input type='text' name='location'/><br />
	Type: <input type='text' name='type'/><br />

	<input type='submit' value='Create' />
</form>